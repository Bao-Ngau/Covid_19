<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".SendSmsActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Khung"
        android:layout_centerInParent="true"
        android:background="@drawable/radius_textview"
        android:padding="20dp"
        android:text="Gửi tin nhắn cho tổng tài"
        android:textSize="25sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/Khung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_margin="30dp"
        >
        <EditText
            android:id="@+id/SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập SDT"
            android:minHeight="48dp"
            android:text="038578008"
            android:inputType="phone"
            android:textSize="25sp"
            android:singleLine="true"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border"
            />
        <EditText
            android:id="@+id/NoiDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập nội dung"
            android:minHeight="48dp"
            android:inputType="text"
            android:textSize="25sp"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border"
            />
        <Button
            android:id="@+id/Gui"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:text="Gửi"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/rounded_button_logup"
            />
    </LinearLayout>

</RelativeLayout>